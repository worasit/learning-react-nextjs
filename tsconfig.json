{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES6",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },
  "include": [
    "./src/**/*"
  ]
}
